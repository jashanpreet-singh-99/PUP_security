<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_guard_dialog"
    android:background="#66000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_margin="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/rounded_btn"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:elevation="15dp"
            android:layout_gravity="center"
            android:background="@drawable/oval_btn"
            android:id="@+id/guard_image"
            android:backgroundTint="@color/colorPrimary"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/guard_name"
            android:textColor="#000"
            android:background="@drawable/rounded_border_btn"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColorHint="@color/colorSecondaryText"
            android:layout_marginEnd="50dp"
            android:maxLines="1"
            android:layout_marginStart="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/dialog_guard_name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/guard_phone_number"
            android:textColor="#000"
            android:background="@drawable/rounded_border_btn"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:inputType="phone"
            android:textColorHint="@color/colorSecondaryText"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_gravity="center"
            android:id="@+id/dialog_guard_contact"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:background="@drawable/rounded_border_btn"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/save"
            android:textColor="#fff"
            android:elevation="16dp"
            android:id="@+id/dialog_save_btn"
            />

    </LinearLayout>

</RelativeLayout>